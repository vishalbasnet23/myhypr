# --- Fastfetch random logo updater (Zsh) ---
if [[ $- == *i* ]]; then
    PROFILE_DIR="$HOME/.config/fastfetch/profiles"
    LOGO_LINK="$HOME/Pictures/logo.png"

    # Collect all PNGs into an array safely (Zsh way)
    png_files=($PROFILE_DIR/*.png(N))

    if (( ${#png_files[@]} > 0 )); then
        # Randomly select one PNG
        ACTIVE_LOGO="${png_files[RANDOM % ${#png_files[@]}]}"

        # Ensure directory exists
        mkdir -p "$HOME/.config/fastfetch"

        # Update symlink
        ln -sf -- "$ACTIVE_LOGO" "$LOGO_LINK"
    fi
fi

